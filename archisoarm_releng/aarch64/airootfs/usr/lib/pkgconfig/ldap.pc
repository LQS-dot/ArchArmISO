prefix=/usr
exec_prefix=${prefix}
includedir=${prefix}/include
libdir=${exec_prefix}/lib

Name: ldap (OpenLDAP)
Description: OpenLDAP Lightweight Directory Access Protocol library
URL: https://www.openldap.org
Version: 2.6.4
Requires: lber
Cflags: -I${includedir}
Libs: -L${libdir} -lldap
Libs.private:  -lsasl2 -lssl -lcrypto 
